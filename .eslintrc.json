{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "ignorePatterns": ["dist/"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier", "plugin:@typescript-eslint/recommended"],
  "plugins": ["import"],
  "rules": {
    "import/newline-after-import": ["error", { "count": 1 }]
  }
}
